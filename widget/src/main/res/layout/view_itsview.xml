<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="@drawable/bg_selector_iti"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
  <ImageView
      android:id="@id/iv_picture_its"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="5dp"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@mipmap/email"
      />

  <TextView
      android:id="@id/tv_title_its"
      android:layout_toRightOf="@id/iv_picture_its"
      android:textSize="@dimen/tv_title"
      android:layout_centerVertical="true"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="8dp"
      android:padding="5dp"
      android:textColor="@color/md_grey_800"
      />

  <Spinner
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/tv_title_its"
      android:id="@id/spin_menu_its"
      android:layout_marginRight="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/md_grey_400"
      />
</LinearLayout>