<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mazaiting.site.module.manage.attend.day.AttendDayActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/attend_month_tv_site_name"
            android:text="工地名称"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/primary_text"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@id/attend_month_tv_time"
            android:text="当前时间"
            android:layout_weight="2"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/secondary_text"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@id/attend_month_tv_desc"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/tv_attend_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@id/attend_month_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>