<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/item_tv_equip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="设备名称"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@id/item_tv_equip_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="设备号"/>

    <TextView
        android:id="@id/item_tv_equip_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_equip_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="设备种类"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@id/item_tv_equip_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_equip_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="是否启用"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@id/item_tv_entry_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_tv_equip_name"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="录入时间"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/sp_14"/>
</RelativeLayout>